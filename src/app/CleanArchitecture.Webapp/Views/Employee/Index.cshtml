@model IEnumerable<CleanArchitecture.Application.VIewModels.EmployeeVm>
@{
    int idNo = 1;
}


<div class="container">

    <p>
        <a asp-action="CreateOrEdit" asp-controller="Employee" class="btn btn-sm btn-success" mt-3>Create New</a>
    </p>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@idNo</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>
                    
                        <a asp-action="CreateOrEdit" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a> |

                        <a asp-action="Details" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-sm btn-success">Details</a> |

                        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" onclick="return confirm('Are you sure delete this item?')" class="btn btn-sm btn-danger">Delete</a>
                    
                    </td>
                </tr>
                idNo++;
            }
            
        </tbody>
    </table>
</div>